{
  "name": "flower-delivery-platform",
  "version": "1.0.0",
  "private": true,
  "description": "전국 꽃배달 B2B 플랫폼",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "prettier": "^3.3.3",
    "turbo": "^2.0.9",
    "typescript": "^5.5.3"
  },
  "packageManager": "pnpm@9.5.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
